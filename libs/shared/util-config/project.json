{
  "name": "util-config",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/util-config/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:shared", "type:util"],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/shared/util-config/ng-package.json",
        "tsConfig": "libs/shared/util-config/tsconfig.lib.json"
      },
      "configurations": {
        "production": {},
        "development": {}
      },
      "defaultConfiguration": "production",
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/util-config/jest.config.cts",
        "tsConfig": "libs/shared/util-config/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/shared/util-config/**/*.ts"]
      }
    }
  }
}
